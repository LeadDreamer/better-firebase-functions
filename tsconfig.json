{
    "version": "2.4.2",
    "compilerOptions": {
        "lib": ["es5", "es6"],
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "rootDir": "src",
        "outDir": "lib",
        "esModuleInterop": true,
        "types": ["node", "jest"]
    },
    "exclude": [
        "node_modules", "lib"
    ]
}